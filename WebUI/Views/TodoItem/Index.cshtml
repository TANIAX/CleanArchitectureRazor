@{
    ViewData["Title"] = "TodoItem - List";
}

<div class="container p-3">
	<div class="row pt-4">
		<div class="col-6">
			<h2>@ViewData["Title"]</h2>
			<hr />
		</div>
		<div class="col-6 text-end">
			<a asp-controller="TodoItem" asp-action="Create" class="btn btn-primary">
				<i class="bi bi-plus-square"></i> &nbsp;Create New Item
			</a>
		</div>
	</div>

	<br /><br />

	<table class="table table-bordered table-striped" style="width:100%">
		<thead>
			<tr>
				<th>
					Title
				</th>
				<th>
					Note
				</th>
				<th>
					Priority
				</th>
				<th>
					Done
				</th>
				<th>
					List
				</th>
				<th>

				</th>
			</tr>
		</thead>
		<tbody>
			@foreach(var item in Model)
			{
				<tr>
					<td width="14%">@item.Title</td>
					<td width="14%">@item.Note</td>
					<td width="14%">@item.Priority</td>
					<td width="14%">@item.Done</td>
					<td width="14%">@item.List.Title</td>
					<td>
						<div class="w-75 btn-group" role="group">
						<a  asp-controller="TodoItem" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary mx-2">
							<i class="bi bi-pencil-square"></i>
						</a>
						<a asp-controller="TodoItem" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger mx-2">
							<i class="bi bi-trash-fill"></i>
						</a>
						</div>
					</td>
				</tr>
			}
			
		</tbody>
	</table>

</div>